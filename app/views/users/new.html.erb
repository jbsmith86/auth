<h1>Create your account here!</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation  %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= submit_tag 'Create My Account Already!' %>
<% end %>
