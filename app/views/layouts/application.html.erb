<!DOCTYPE html>
<html>
<head>
  <title>Auth</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Dashboard", dashboard_path %></li>
    </ul>
    <ul>
      <% if current_user %>
        <li>Welcome <%= current_user.name %>!</li>
        <li><%= link_to 'Sign Out (destroy session)', session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Register (new user)', new_user_path %></li>
        <li><%= link_to 'Sign In (create session)', new_session_path %></li>
      <% end %>
    </ul>
  </nav>

  <%= notice %>
  <%= yield %>

</body>
</html>
